{
  "defaultSeverity": "error",
  "extends": [
      "tslint:recommended",
      "tslint-sonarts"
  ],
  "linterOptions": {
      "exclude": [
          "src/grammar/*.ts"
      ]
  }, 
  "jsRules": {},
  "rules": {
      "semicolon": [
          true,
          "never"
      ],
      "quotemark": [
          true,
          "single"
      ],
      "indent": [
          true,
          "spaces",
          2
      ],
      "interface-name": false,
      "only-arrow-functions": true,
      "no-unnecessary-class": true
  },
  "rulesDirectory": []
}