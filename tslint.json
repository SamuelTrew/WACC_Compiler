{
    "defaultSeverity": "error",
    "extends": [
        "tslint:recommended",
        "tslint-sonarts"
    ],
    "linterOptions": {
        "exclude": [
            "src/grammar/*.ts"
        ]
    },
    "jsRules": {},
    "rules": {
        "semicolon": [
            true,
            "never"
        ],
        "quotemark": [
            true,
            "single"
        ],
        "indent": [
            true,
            "spaces",
            2
        ],
        "interface-name": false,
        "only-arrow-functions": true,
        "no-unnecessary-class": true,
        "whitespace": [
            true,
            "check-branch",
            "check-decl",
            "check-operator",
            "check-module",
            "check-separator",
            "check-rest-spread",
            "check-type",
            "check-typecast",
            "check-type-operator",
            "check-preblock",
            "check-postbrace"
        ],
        "no-console": false,
        "max-line-length": [
            true,
            80
        ],
        "align": [
            true,
            "elements",
            "members",
            "statements"
        ],
        "max-union-size": [
            true, 
            4
        ]
    },
    "rulesDirectory": []
}